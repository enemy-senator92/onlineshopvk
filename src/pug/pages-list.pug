extends /includes/layout

block variables
  - const title = 'Список страниц'

block main
  style.
    .pages-list {
      list-style: none;
      padding: 0 15px;
      font-size: 12px;
      line-height: 20px;
    }

    .pages-list a {
      color: inherit;
      text-decoration: none;
      border-bottom: 1px solid;
    }

    .pages-list li {
      margin-bottom: 5px;
    }

  main.main
    .main__container
      ul.pages-list
        each group in $.pagesList
          li
            if group.title
              h3=group.title
            ul.pages-list
              each page in group.list
                li
                  a(href=page.href): nobr=page.content
                  =' - '
                  nobr=page.href
